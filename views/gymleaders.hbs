            </select>
            <label for="update-pnamen">New Pokemon Name </label>
            <select name="update-pnamen" id="update-pnamen">
                <option value="NULL"></option>
                {{#each Pokemon}}
                <option value="{{this.pokname}}">{{this.pokname}}</option>
                {{/each}}
            </select>
            <label for="update-lcapn">New Level Cap</label>
            <input type="number" name="update-lcapn" id="update-lcapn">
        </fieldset>
        <input class="btn" type="submit" id="updateglp" value="Update a Gym Leader's Pokemon">
